{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // "allowJs": true,
    "esModuleInterop": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["./public", "./node_modules", "./build"],
}
